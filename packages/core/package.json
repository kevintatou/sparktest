{
  "name": "@sparktest/core",
  "version": "0.1.0",
  "description": "Shared TypeScript types and utilities for SparkTest",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup src/index.ts --dts --format esm,cjs",
    "dev": "tsup src/index.ts --dts --format esm,cjs --watch",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "lucide-react": "^0.454.0"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5",
    "@types/node": "^22",
    "@types/react": "^18"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "publishConfig": {
    "access": "public"
  }
}