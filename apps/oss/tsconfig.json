{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@sparktest/core": ["../../packages/core/src"],
      "@sparktest/core/*": ["../../packages/core/src/*"],
      "@sparktest/storage-service": ["../../packages/storage-service"],
      "@sparktest/storage-service/*": ["../../packages/storage-service/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
